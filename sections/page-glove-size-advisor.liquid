              {% if section.settings.versionA_content != blank %}{{ section.settings.versionA_content }}{% endif %}
            </div>
            {% if section.settings.versionA_img != blank or section.settings.versionA_mobimg != blank %}
              <div class="versionA-image">
                {% if section.settings.versionA_img != blank %}
                  <img class="lazyload {% if section.settings.versionA_mobimg != blank %}hidden-sm{% endif %}" src="{{ section.settings.versionA_img | img_url:'' }}" alt="{{ section.settings.versionA_img.alt }}">
