{%- liquid
  assign section_width = section.settings.width
  assign animations_enabled = settings.animations_enabled
  assign animation_anchor = '#Glovesize--' | append: section.id
  assign animation_delay = 150
-%}

<style>
  #Glovesize--{{ section.id }} {
    --PT: {{ section.settings.padding_top }}px;
    --PB: {{ section.settings.padding_bottom }}px;
  }
  {% if section.settings.glovesize_bgimg != blank %}
  .Glovesize-bg {
    background-image: url('{{ section.settings.glovesize_bgimg | img_url:'' }}');
    background-repeat: no-repeat;
    background-size: 100%;
  }{% endif %}
  .Glovesize-form-wrapper.has-bg {
    padding-top: 60%;
  }
  @media(max-width: 1699px){
    .Glovesize-form-wrapper.has-bg {
      padding-top: 50%;
    }
  }
  @media(max-width: 1440px){
    .Glovesize-form-wrapper.has-bg {
      padding-top: 40%;
    }
  }
  @media(max-width: 1199px){
    .Glovesize-form-wrapper.has-bg {
      padding-top: 30%;
    }
  }
  @media(max-width: 1023px){
    .Glovesize-form-wrapper.has-bg {
      padding-top: 25%;
    }
  }
  @media(max-width: 767px){
  #Glovesize--{{ section.id }} {
    --PT: {{ section.settings.mob_padding_top }}px;
    --PB: {{ section.settings.mob_padding_bottom }}px;
  }
    .Glovesize-form-wrapper.has-bg {
      padding-top: 0;
    }
    .Glovesize-bg{background:none;}    
  }
</style>
<section
