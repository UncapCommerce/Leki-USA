{% style %}
          .modal,.modal_privacy {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            opacity: 0;
            visibility: hidden;
            transform: scale(1.1);
            transition: visibility 0s linear 0.25s, opacity 0.25s 0s, transform 0.25s;
             border-radius: 0;
        }
      .modal-content{
        width:1250px;
      }
           .show-modal {
            opacity: 1;
            visibility: visible;
            transform: scale(1.0);
            transition: visibility 0s linear 0s, opacity 0.25s 0s, transform 0.25s;
        }
        .modal-content {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          background-color: white;
          padding: 1.25rem;
          width: 550px;
          border-radius: 0.5rem;
      }
      .modal_inner{
          padding: 1.25rem;
      }
      .modal-content p{
        margin-bottom:10px;
      }
        .close-button {
          float: right;
          width: 1.5rem;
          font-size: 1.2em;
          line-height: 1;
          padding: 0 0.2em 0.15em;
          text-align: center;
          cursor: pointer;
          border-radius: 0.25rem;
          background-color: var(--clr-neutral);
          color: var(--clr-dark);
          transition: color 0.12s ease-in-out;
      }
      .cookie_button {
        display: flex;
        column-gap: 20px;
        margin-bottom: 20px;
    }
      .cookie_button button {
        max-width: 225px;
        width: 100%;
        border: 1px solid #27304a;
        color: #27304a;
        font-size: 17px;
        padding: 0.95em 1.15em;
        display: -ms-inline-flexbox;
        display: -webkit-inline-flex;
        display: inline-flex;
        -ms-flex-align: center;
        align-items: center;
        position: relative;
        text-align: center;
        border-radius: 0;
        justify-content: center;
        font-weight: 900;
    }
      .accept_btn{
       border: 1px solid #27304a;
        background: #27304a;
        color: #fff !important;
  }
{% endstyle %}

{% capture powered_by_link %} {{ 'footer.powered_by' | t }} <a href="https://www.shopify.com/" rel="noopener" target="_blank" rel="nofollow">Shopify</a>.{% endcapture %}

<div class="footer-copyright">
  <span>&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}.</span>
  {% comment %}<span>{{ powered_by_link }}</span>{% endcomment %}
  <span>{{ 'footer.copyright' | t }}</span>
  {%- for link in linklists[section.settings.bottom_menu].links -%}
    <a
      href="{{ link.url }}"
      class="footer-copyright__link {% if link.title == 'Cookie-Settings' %} cookie-modal {% endif %}"
    >
      {{- link.title | strip_html | escape -}}
    </a>
  {%- endfor -%}
</div>
